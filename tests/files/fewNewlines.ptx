        </match>
        <match order="2">
          <premise>
            <p>The number 20</p>
          </premise>
          <response>
            <p>An even number</p>
          </response>
        </match>
        <match order="3">
          <premise>Favorite color</premise>
          <response>Blue</response>
        </match>
      </matches>
    </exercise>
