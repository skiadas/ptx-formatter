    <title>Homework 1</title>
    <exercise>
      <title>Fill in the blank</title>
      <statement>
        <p>How much is 2+2: <var /></p>
      </statement>
      <setup>
        <var>
          <condition number="4">
            <feedback>That's right!</feedback>
          </condition>
          <condition string="[1-3]">
            <feedback>So close!</feedback>
          </condition>
          <condition string=".*">
            <feedback>what is wrong with you!</feedback>
          </condition>
        </var>
      </setup>
    </exercise>
